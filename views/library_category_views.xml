<odoo>
    <!-- List View -->
    <record id="view_library_category_list" model="ir.ui.view">
        <field name="name">library.category.list</field>
        <field name="model">library.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="complete_name"/>
                <field name="parent_id"/>
                <field name="sequence"/>
                <field name="book_count"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_library_category_form" model="ir.ui.view">
        <field name="name">library.category.form</field>
        <field name="model">library.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="active"/>
                        <field name="name"/>
                        <field name="complete_name" readonly="1"/>
                        <field name="parent_id"/>
                        <field name="sequence"/>
                        <field name="book_count" readonly="1"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <group>
                        <field name="parent_path" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Child Categories">
                            <field name="child_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="complete_name"/>
                                    <field name="sequence"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Books">
                            <field name="book_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="author_ids"/>
                                    <field name="publisher_id"/>
                                    <field name="publication_date"/>
                                    <field name="state"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_library_category_search" model="ir.ui.view">
        <field name="name">library.category.search</field>
        <field name="model">library.category</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="complete_name"/>
                <field name="parent_id"/>
                <field name="active"/>
                <filter string="Inactive" name="inactive" domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_library_category_kanban" model="ir.ui.view">
        <field name="name">library.category.kanban</field>
        <field name="model">library.category</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="complete_name"/>
                <field name="parent_id"/>
                <field name="sequence"/>
                <field name="book_count"/>
                <field name="active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong><field name="complete_name"/></strong>
                            <div>
                                <span t-if="record.parent_id.value">Parent: <field name="parent_id"/></span>
                            </div>
                            <div>
                                <span>Books: <field name="book_count"/></span>
                            </div>
                            <div>
                                <span>Sequence: <field name="sequence"/></span>
                            </div>
                            <div>
                                <field name="active"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_category" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">library.category</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="search_view_id" ref="view_library_category_search"/>
    </record>

    <!-- Menu Item (adjust parent as needed) -->
    <menuitem id="menu_library_category_root" name="Categories" parent="library_management.menu_library_root" action="action_library_category"/>
</odoo>