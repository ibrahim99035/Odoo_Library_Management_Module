<odoo>
    <!-- List View -->
    <record id="view_library_member_list" model="ir.ui.view">
        <field name="name">library.member.list</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <list>
                <field name="member_id"/>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="membership_type"/>
                <field name="state"/>
                <field name="borrowed_count"/>
                <field name="fine_amount"/>
                <field name="expiry_date"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_library_member_form" model="ir.ui.view">
        <field name="name">library.member.form</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="active"/>
                        <field name="member_id" readonly="1"/>
                        <field name="name"/>
                        <field name="photo" widget="image"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="mobile"/>
                        <field name="address"/>
                        <field name="city"/>
                        <field name="state"/>
                        <field name="zip_code"/>
                        <field name="country_id"/>
                    </group>
                    <group string="Personal Details">
                        <field name="birth_date"/>
                        <field name="age" readonly="1"/>
                        <field name="gender"/>
                    </group>
                    <group string="Membership">
                        <field name="membership_type"/>
                        <field name="join_date"/>
                        <field name="expiry_date" readonly="1"/>
                        <field name="max_books" readonly="1"/>
                        <field name="state"/>
                        <field name="fine_amount" readonly="1"/>
                        <field name="borrowed_count" readonly="1"/>
                        <field name="total_borrowed" readonly="1"/>
                    </group>
                    <group string="Other">
                        <field name="notes"/>
                        <field name="emergency_contact_name"/>
                        <field name="emergency_contact_phone"/>
                        <field name="student_id"/>
                        <field name="employee_id"/>
                        <field name="department"/>
                        <field name="institution"/>
                        <field name="user_id"/>
                        <field name="partner_id"/>
                        <field name="library_card_printed"/>
                        <field name="card_print_date"/>
                    </group>
                    <notebook>
                        <page string="Borrowings">
                            <field name="borrowing_ids">
                                <tree>
                                    <field name="book_id"/>
                                    <field name="borrow_date"/>
                                    <field name="due_date"/>
                                    <field name="return_date"/>
                                    <field name="state"/>
                                    <field name="fine_amount"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Current Borrowings">
                            <field name="current_borrowings">
                                <tree>
                                    <field name="book_id"/>
                                    <field name="borrow_date"/>
                                    <field name="due_date"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Fines">
                            <field name="fine_ids">
                                <tree>
                                    <field name="amount"/>
                                    <field name="reason"/>
                                    <field name="date_created"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Reservations">
                            <field name="reservation_ids">
                                <tree>
                                    <field name="book_id"/>
                                    <field name="reservation_date"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Reviews">
                            <field name="review_ids">
                                <tree>
                                    <field name="book_id"/>
                                    <field name="rating"/>
                                    <field name="review"/>
                                    <field name="review_date"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_library_member_search" model="ir.ui.view">
        <field name="name">library.member.search</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <search>
                <field name="member_id"/>
                <field name="name"/>
                <field name="email"/>
                <field name="membership_type"/>
                <field name="state"/>
                <field name="active"/>
                <filter string="Active" name="active" domain="[('state','=','active')]"/>
                <filter string="Suspended" name="suspended" domain="[('state','=','suspended')]"/>
                <filter string="Expired" name="expired" domain="[('state','=','expired')]"/>
                <filter string="Blocked" name="blocked" domain="[('state','=','blocked')]"/>
                <filter string="Inactive" name="inactive" domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_library_member_kanban" model="ir.ui.view">
        <field name="name">library.member.kanban</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="member_id"/>
                <field name="name"/>
                <field name="photo"/>
                <field name="membership_type"/>
                <field name="state"/>
                <field name="borrowed_count"/>
                <field name="fine_amount"/>
                <field name="expiry_date"/>
                <field name="active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div>
                                <img t-if="record.photo.value" t-att-src="'data:image/png;base64,%s' % record.photo.raw_value" class="oe_kanban_image" style="max-height:80px;"/>
                            </div>
                            <strong><field name="name"/></strong>
                            <div>
                                <span>ID: <field name="member_id"/></span>
                            </div>
                            <div>
                                <span>Type: <field name="membership_type"/></span>
                                <span>Status: <field name="state"/></span>
                            </div>
                            <div>
                                <span>Borrowed: <field name="borrowed_count"/></span>
                                <span>Fines: <field name="fine_amount"/></span>
                            </div>
                            <div>
                                <span>Expiry: <field name="expiry_date"/></span>
                            </div>
                            <div>
                                <field name="active"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_member" model="ir.actions.act_window">
        <field name="name">Members</field>
        <field name="res_model">library.member</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="search_view_id" ref="view_library_member_search"/>
    </record>

    <!-- Menu Item (adjust parent as needed) -->
    <menuitem id="menu_library_member_root" name="Members" parent="library_management.menu_library_root" action="action_library_member"/>
</odoo>