<odoo>
    <!-- List View -->
    <record id="view_library_fine_list" model="ir.ui.view">
        <field name="name">library.fine.list</field>
        <field name="model">library.fine</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="member_id"/>
                <field name="borrowing_id"/>
                <field name="amount"/>
                <field name="reason"/>
                <field name="date_created"/>
                <field name="due_date"/>
                <field name="date_paid"/>
                <field name="state"/>
                <field name="paid_amount"/>
                <field name="remaining_amount"/>
                <field name="currency_id"/>
                <field name="processed_by"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_library_fine_form" model="ir.ui.view">
        <field name="name">library.fine.form</field>
        <field name="model">library.fine</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="member_id"/>
                        <field name="borrowing_id"/>
                        <field name="amount"/>
                        <field name="currency_id"/>
                        <field name="reason"/>
                        <field name="date_created"/>
                        <field name="due_date" readonly="1"/>
                        <field name="date_paid"/>
                        <field name="state"/>
                    </group>
                    <group>
                        <field name="paid_amount"/>
                        <field name="remaining_amount" readonly="1"/>
                        <field name="payment_method"/>
                        <field name="payment_reference"/>
                        <field name="processed_by"/>
                    </group>
                    <group>
                        <field name="notes"/>
                        <field name="waived_reason"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_library_fine_search" model="ir.ui.view">
        <field name="name">library.fine.search</field>
        <field name="model">library.fine</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="member_id"/>
                <field name="borrowing_id"/>
                <field name="reason"/>
                <field name="state"/>
                <field name="date_created"/>
                <field name="date_paid"/>
                <filter string="Pending" name="pending" domain="[('state','=','pending')]"/>
                <filter string="Paid" name="paid" domain="[('state','=','paid')]"/>
                <filter string="Waived" name="waived" domain="[('state','=','waived')]"/>
                <filter string="Partial" name="partial" domain="[('state','=','partial')]"/>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_library_fine_kanban" model="ir.ui.view">
        <field name="name">library.fine.kanban</field>
        <field name="model">library.fine</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="member_id"/>
                <field name="amount"/>
                <field name="state"/>
                <field name="date_created"/>
                <field name="due_date"/>
                <field name="paid_amount"/>
                <field name="remaining_amount"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong><field name="name"/></strong>
                            <div>
                                <span t-if="record.member_id.value">Member: <field name="member_id"/></span>
                            </div>
                            <div>
                                <span>Amount: <field name="amount"/></span>
                                <span>Status: <field name="state"/></span>
                            </div>
                            <div>
                                <span>Created: <field name="date_created"/></span>
                                <span>Due: <field name="due_date"/></span>
                            </div>
                            <div>
                                <span>Paid: <field name="paid_amount"/></span>
                                <span>Remaining: <field name="remaining_amount"/></span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_fine" model="ir.actions.act_window">
        <field name="name">Fines</field>
        <field name="res_model">library.fine</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="search_view_id" ref="view_library_fine_search"/>
    </record>

    <!-- Menu Item (adjust parent as needed) -->
    <menuitem id="menu_library_fine_root" name="Fines" parent="library_management.menu_library_root" action="action_library_fine"/>
</odoo>