<odoo>
    <!-- List View -->
    <record id="view_library_borrowing_list" model="ir.ui.view">
        <field name="name">library.borrowing.list</field>
        <field name="model">library.borrowing</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="member_id"/>
                <field name="book_id"/>
                <field name="borrow_date"/>
                <field name="due_date"/>
                <field name="return_date"/>
                <field name="state"/>
                <field name="renewal_count"/>
                <field name="fine_amount"/>
                <field name="librarian_id"/>
                <field name="return_librarian_id"/>
                <field name="book_condition_borrow"/>
                <field name="book_condition_return"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_library_borrowing_form" model="ir.ui.view">
        <field name="name">library.borrowing.form</field>
        <field name="model">library.borrowing</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="active"/>
                        <field name="name" readonly="1"/>
                        <field name="member_id"/>
                        <field name="book_id"/>
                        <field name="borrow_date"/>
                        <field name="due_date" readonly="1"/>
                        <field name="return_date"/>
                        <field name="state"/>
                    </group>
                    <group>
                        <field name="renewal_count" readonly="1"/>
                        <field name="max_renewals" readonly="1"/>
                        <field name="can_renew" readonly="1"/>
                        <field name="fine_amount" readonly="1"/>
                        <field name="days_overdue" readonly="1"/>
                    </group>
                    <group>
                        <field name="librarian_id"/>
                        <field name="return_librarian_id"/>
                    </group>
                    <group>
                        <field name="book_condition_borrow"/>
                        <field name="book_condition_return"/>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                    <notebook>
                        <page string="Fines">
                            <field name="fine_ids">
                                <tree>
                                    <field name="amount"/>
                                    <field name="reason"/>
                                    <field name="date_created"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_library_borrowing_search" model="ir.ui.view">
        <field name="name">library.borrowing.search</field>
        <field name="model">library.borrowing</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="member_id"/>
                <field name="book_id"/>
                <field name="borrow_date"/>
                <field name="due_date"/>
                <field name="return_date"/>
                <field name="state"/>
                <field name="active"/>
                <filter string="Borrowed" name="borrowed" domain="[('state','=','borrowed')]"/>
                <filter string="Returned" name="returned" domain="[('state','=','returned')]"/>
                <filter string="Overdue" name="overdue" domain="[('state','=','overdue')]"/>
                <filter string="Lost" name="lost" domain="[('state','=','lost')]"/>
                <filter string="Inactive" name="inactive" domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_library_borrowing_kanban" model="ir.ui.view">
        <field name="name">library.borrowing.kanban</field>
        <field name="model">library.borrowing</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="member_id"/>
                <field name="book_id"/>
                <field name="borrow_date"/>
                <field name="due_date"/>
                <field name="state"/>
                <field name="fine_amount"/>
                <field name="active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong><field name="name"/></strong>
                            <div>
                                <span t-if="record.member_id.value">Member: <field name="member_id"/></span>
                            </div>
                            <div>
                                <span t-if="record.book_id.value">Book: <field name="book_id"/></span>
                            </div>
                            <div>
                                <span>Borrowed: <field name="borrow_date"/></span>
                                <span>Due: <field name="due_date"/></span>
                            </div>
                            <div>
                                <span>Status: <field name="state"/></span>
                            </div>
                            <div>
                                <span>Fine: <field name="fine_amount"/></span>
                            </div>
                            <div>
                                <field name="active"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_borrowing" model="ir.actions.act_window">
        <field name="name">Borrowings</field>
        <field name="res_model">library.borrowing</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="search_view_id" ref="view_library_borrowing_search"/>
    </record>

    <!-- Menu Item (adjust parent as needed) -->
    <menuitem id="menu_library_borrowing_root" name="Borrowings" parent="library_management.menu_library_root" action="action_library_borrowing"/>
</odoo>