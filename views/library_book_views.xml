<odoo>
    <!-- List View -->
    <record id="view_library_book_list" model="ir.ui.view">
        <field name="name">library.book.list</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="isbn"/>
                <field name="author_ids"/>
                <field name="publisher_id"/>
                <field name="category_id"/>
                <field name="publication_date"/>
                <field name="state"/>
                <field name="available_copies"/>
                <field name="total_copies"/>
                <field name="average_rating"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_library_book_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="active"/>
                        <field name="name"/>
                        <field name="isbn"/>
                        <field name="isbn13"/>
                        <field name="barcode"/>
                        <field name="cover_image" widget="image"/>
                    </group>
                    <group>
                        <field name="author_ids" widget="many2many_tags"/>
                        <field name="publisher_id"/>
                        <field name="category_id"/>
                        <field name="publication_date"/>
                        <field name="edition"/>
                        <field name="language"/>
                        <field name="pages"/>
                        <field name="location"/>
                    </group>
                    <group>
                        <field name="total_copies"/>
                        <field name="available_copies" readonly="1"/>
                        <field name="borrowed_copies" readonly="1"/>
                        <field name="state"/>
                    </group>
                    <group>
                        <field name="price"/>
                        <field name="currency_id"/>
                        <field name="cost"/>
                        <field name="supplier"/>
                        <field name="acquisition_date"/>
                    </group>
                    <group>
                        <field name="average_rating" readonly="1"/>
                        <field name="review_count" readonly="1"/>
                        <field name="popularity_score" readonly="1"/>
                    </group>
                    <group>
                        <field name="subject"/>
                        <field name="keywords"/>
                        <field name="dewey_decimal"/>
                        <field name="tags"/>
                    </group>
                    <group>
                        <field name="notes"/>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Borrowings">
                            <field name="borrowing_ids">
                                <tree>
                                    <field name="member_id"/>
                                    <field name="borrow_date"/>
                                    <field name="return_date"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Reservations">
                            <field name="reservation_ids">
                                <tree>
                                    <field name="member_id"/>
                                    <field name="reservation_date"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Reviews">
                            <field name="review_ids">
                                <tree>
                                    <field name="member_id"/>
                                    <field name="rating"/>
                                    <field name="review"/>
                                    <field name="review_date"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_library_book_search" model="ir.ui.view">
        <field name="name">library.book.search</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="isbn"/>
                <field name="author_ids"/>
                <field name="publisher_id"/>
                <field name="category_id"/>
                <field name="state"/>
                <field name="active"/>
                <filter string="Available" name="available" domain="[('state','=','available')]"/>
                <filter string="Lost" name="lost" domain="[('state','=','lost')]"/>
                <filter string="Inactive" name="inactive" domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_library_book_kanban" model="ir.ui.view">
        <field name="name">library.book.kanban</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="cover_image"/>
                <field name="author_ids"/>
                <field name="category_id"/>
                <field name="state"/>
                <field name="available_copies"/>
                <field name="average_rating"/>
                <field name="active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div>
                                <img t-if="record.cover_image.value" t-att-src="'data:image/png;base64,%s' % record.cover_image.raw_value" class="oe_kanban_image" style="max-height:80px;"/>
                            </div>
                            <strong><field name="name"/></strong>
                            <div>
                                <span t-if="record.author_ids.value">By <field name="author_ids"/></span>
                            </div>
                            <div>
                                <span t-if="record.category_id.value">Category: <field name="category_id"/></span>
                            </div>
                            <div>
                                <span>Status: <field name="state"/></span>
                            </div>
                            <div>
                                <span>Available: <field name="available_copies"/></span>
                            </div>
                            <div>
                                <span>Rating: <field name="average_rating"/></span>
                            </div>
                            <div>
                                <field name="active"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_book" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="search_view_id" ref="view_library_book_search"/>
    </record>

    <!-- Menu Item (adjust parent as needed) -->
    <menuitem id="menu_library_book_root" name="Books" parent="library_management.menu_library_root" action="action_library_book"/>
</odoo>