<templates id="template" xml:space="preserve">
    <t t-name="library_management.dashboard">
        <div class="o_library_dashboard">
            <h2>Library Dashboard</h2>
            <div class="row">
                <div class="col">
                    <div class="card">
                        <div class="card-header">Total Books</div>
                        <div class="card-body">
                            <span t-esc="widget.total_books"/>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card">
                        <div class="card-header">Active Members</div>
                        <div class="card-body">
                            <span t-esc="widget.active_members"/>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card">
                        <div class="card-header">Books Borrowed</div>
                        <div class="card-body">
                            <span t-esc="widget.books_borrowed"/>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Add charts, recent activity, etc. -->
        </div>
    </t>
</templates>