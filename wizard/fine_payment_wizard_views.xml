<odoo>
    <record id="view_fine_payment_wizard_form" model="ir.ui.view">
        <field name="name">fine.payment.wizard.form</field>
        <field name="model">fine.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="Pay Fine">
                <group>
                    <field name="fine_id"/>
                    <field name="payment_amount"/>
                    <field name="payment_method"/>
                    <field name="payment_reference"/>
                </group>
                <footer>
                    <button string="Pay" type="object" name="action_pay_fine" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>